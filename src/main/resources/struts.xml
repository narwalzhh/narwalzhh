<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <!-- <constant name="struts.devMode" value="true" /> -->

    <package name="default" namespace="/" extends="json-default, struts-default">

        <default-action-ref name="error" />
        
        <global-results>
            <result name="error">error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>
        
        <action name="error">
        	<result>/error.jsp</result>
        </action>
        
    </package>

    <!-- Add packages here -->
	
	<package name="module" namespace="/module" extends="default">
	</package>
	
	<package name="module/comic" namespace="/module/comic" extends="default">
		<default-action-ref name="error"></default-action-ref>
		<action name="error">
			<result>/module/comic/main.jsp</result>
		</action>
	</package>
	
	<package name="module/littlestuff" namespace="/module/littlestuff" extends="default">
		<default-action-ref name="error"></default-action-ref>
		<action name="error">
			<result>/module/littlestuff/main.jsp</result>
		</action>
	</package>
	
	<package name="module/message" namespace="/module/message" extends="default">
		<default-action-ref name="error"></default-action-ref>
		<action name="error">
			<result>/module/message/messagepanel.jsp</result>
		</action>
	</package>
	
	<package name="module/music" namespace="/module/music" extends="default">
		<default-action-ref name="error"></default-action-ref>
		<action name="error">
			<result>/module/music/main.jsp</result>
		</action>
	</package>
	
	<package name="module/programming" namespace="/module/programming" extends="default">
		<default-action-ref name="error"></default-action-ref>
		<action name="error">
			<result>/module/programming/main.jsp</result>
		</action>	
	</package>
	
	<package name="module/reading" namespace="/module/reading" extends="default">
		<default-action-ref name="error"></default-action-ref>
		<action name="error">
			<result>/module/reading/main.jsp</result>
		</action>
	</package>
	
	<package name="module/video" namespace="/module/video" extends="default">
		<default-action-ref name="error"></default-action-ref>
		<action name="error">
			<result>/module/video/main.jsp</result>
		</action>
	</package>
	
</struts>
